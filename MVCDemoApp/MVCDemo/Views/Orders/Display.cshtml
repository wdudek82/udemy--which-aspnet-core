@model OrderDisplayModel

@{
    ViewData["Title"] = "Display";
}

<h1>Display</h1>

@if (Model.Order is null)
{
    <h4>The requested record was not found.</h4>
}
else
{
    <table class="table">
        <tbody>
        <tr>
            <td>
                <string>Order Name</string>
            </td>
            <td>@Model.Order.OrderName</td>
        </tr>
        <tr>
            <td>
                <string>Order Date</string>
            </td>
            <td>@Model.Order.OrderDate</td>
        </tr>
        <tr>
            <td>
                <string>Order Total</string>
            </td>
            <td>@($"{Model.Order.Total:C}")</td>
        </tr>
        <tr>
            <td>
                <string>Item Ordered</string>
            </td>
            <td>@Model.ItemPurchased</td>
        </tr>
        <tr>
            <td>
                <string>Quantity</string>
            </td>
            <td>@Model.Order.Quantity</td>
        </tr>
        <tr>
            <td colspan="2">
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Order.Id">Delete Order</a>
            </td>
        </tr>
        </tbody>
    </table>

    <form asp-action="Update">
        <input name="id" value="@Model.Order.Id" type="hidden">
        <div class="form-group">
            <label class="control-label">Order Name</label>
            <input name="orderName" value="@Model.Order.OrderName" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update Order Name</button>
        </div>
    </form>
}
